<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form_edit"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id_hotel"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_nowa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No WA"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_tipekmr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipe Kamar"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_jmlorang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Orang"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_jmlhari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Hari"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total"
        android:layout_marginBottom="10dp"/>



</LinearLayout>